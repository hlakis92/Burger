
<div class="container">
  <div class="jumbotron">
    <h1 id="pageTitle">Eat Some Burgers!</h1>
    <hr>
    <form class="create-form">
      <div class="row">
        <div class="col-md-6">
          <h2>Add a Burger</h2>

        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
            <button type="submit">Add This Burger</button>
          </div>

        </div>
      </div>
    </form>
    <hr>
    <div class="row">
      <div class="col-md-6">
        <h2 style="text-align: center">Burgers to Eat</h2>

        {{#each burgers}} {{#unless devoured}}

        <p class="burger">
          {{this.id}}. {{this.burger_name}}
          <button data-id="{{this.id}}" class="devourBurger btn btn-success">Devour!</button>
        </p>
        <hr>

        {{/unless}} {{/each}}
       
      </div>
      <div class="col-md-6">
        <h2 style="text-align: center">Burgers Devoured</h2>


         {{#each burgers}} {{#if devoured}}

         <p class="burger eaten">
          {{this.id}}. {{this.burger_name}}
         </p>
         <hr>

         {{/if}} {{/each}}
        </div>
         
      </div>
    </div>
  </div>
</div>